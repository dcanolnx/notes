apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: px-prometheus
  namespace: kube-system
spec:
  ingressClassName: default-ingress-class
  tls:
    - hosts:
        - prometheus-px-keos-ci.int.stratio.com
      secretName: wildcard-int-stratio-com
  rules:
    - host: prometheus-px-keos-ci.int.stratio.com
      http:
        paths:
          - path: /
            pathType: ImplementationSpecific
            backend:
              service:
                name: px-prometheus
                port:
                  number: 9090
