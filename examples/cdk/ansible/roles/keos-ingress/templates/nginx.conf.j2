error_log stderr notice;

worker_processes 2;
worker_rlimit_nofile 130048;
worker_shutdown_timeout 10s;

events {
  multi_accept on;
  use epoll;
  worker_connections 16384;
}

stream {
  # API Server
  upstream kube_apiserver {
    least_conn;
    {% for control_plane in control_planes -%}
    server {{ control_plane }}:6443;
    {% endfor -%}
  }

  server {
    listen        127.0.0.1:6443;
    proxy_pass    kube_apiserver;
    proxy_timeout 10m;
    proxy_connect_timeout 1s;
  }

  # Ingress Nginx http
  upstream ingress_http {
    least_conn;
    server {{ ansible_host }}:32080;
  }

  server {
    listen        0.0.0.0:80;
    proxy_pass    ingress_http;
    proxy_timeout 10m;
    proxy_connect_timeout 1s;
  }

  # Ingress Nginx https
  upstream ingress_https {
    least_conn;
    server {{ ansible_host }}:32443;
  }

  server {
    listen        0.0.0.0:443;
    proxy_pass    ingress_https;
    proxy_timeout 10m;
    proxy_connect_timeout 1s;
  }
}

http {
  aio threads;
  aio_write on;
  tcp_nopush on;
  tcp_nodelay on;

  keepalive_timeout 5m;
  keepalive_requests 100;
  reset_timedout_connection on;
  server_tokens off;
  autoindex off;
}
